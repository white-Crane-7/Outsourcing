    <block wx:if="{{tabs[0].isActive}}">
        <list list="{{list}}"></list>
    </block>
    <block wx:if="{{tabs[1].isActive}}">
        <view class="content">
            <view class="cont" wx:for="{{listdrive}}" wx:key="id">
                <navigator url="{{item.url}}" class="item">
                    {{item.name}}
                    <i class="iconfont icon-dayuhao pos"></i>
                </navigator>
            </view>
